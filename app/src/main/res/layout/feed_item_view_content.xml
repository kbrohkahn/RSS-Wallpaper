<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_marginTop="?attr/actionBarSize"
			  android:layout_height="match_parent"
			  android:orientation="vertical">

	<TextView
		android:id="@+id/feed_item_link"
		style="@style/feed_item_text"
		android:autoLink="web"/>

	<TextView
		android:id="@+id/feed_item_published"
		style="@style/feed_item_text"/>

	<CheckBox
		android:id="@+id/feed_item_downloaded"
		style="@style/feed_item_text"
		android:enabled="false"
		android:gravity="start|center_vertical"
		android:text="@string/item_downloaded"/>

	<CheckBox
		android:id="@+id/feed_item_enabled"
		style="@style/feed_item_text"
		android:gravity="start|center_vertical"
		android:text="@string/item_enabled"/>

	<ImageView
		android:id="@+id/feed_item_image"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:contentDescription="@string/current_image"/>

</LinearLayout>