<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.brohkahn.rsswallpaper">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.SET_WALLPAPER" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<application
		android:name="com.brohkahn.rsswallpaper.MyApplication"
		android:allowBackup="true"
		android:fullBackupContent="@xml/backup_content"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity android:name="com.brohkahn.rsswallpaper.MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.brohkahn.rsswallpaper.FeedItemListView"
			android:label="@string/action_view_items_all" />
		<activity android:name="com.brohkahn.rsswallpaper.FeedItemView" />

		<receiver
			android:name="com.brohkahn.rsswallpaper.MyReceiver"
			android:enabled="true"
			android:exported="false">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>

		<service
			android:name="com.brohkahn.rsswallpaper.ChangeWallpaperService"
			android:enabled="true" />
		<service
			android:name="com.brohkahn.rsswallpaper.DownloadRSSService"
			android:exported="false" />
		<service
			android:name="com.brohkahn.rsswallpaper.DownloadImageService"
			android:exported="false" />
		<service
			android:name="com.brohkahn.rsswallpaper.DownloadIconService"
			android:exported="false" />

		<activity
			android:name="com.brohkahn.rsswallpaper.About"
			android:label="@string/activity_about" />
		<activity
			android:name="com.brohkahn.rsswallpaper.SettingsActivity"
			android:label="@string/activity_settings" />
		<activity
			android:name="com.brohkahn.rsswallpaper.FeedListView"
			android:label="@string/activity_feeds" />
	</application>

</manifest>